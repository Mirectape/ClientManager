<Window x:Class="ClientManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientManager"
        xmlns:views="clr-namespace:ClientManager.Views"
        xmlns:vms="clr-namespace:ClientManager.ViewModels"
        mc:Ignorable="d"
        Title="Client manager" 
        Height="600" 
        Width="1000"
        FontSize="14">
    
    <Grid MaxWidth="800" Margin="10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 0 0 20">
            <TextBlock>made by I.M.</TextBlock>
        </Grid>

        <Grid Grid.Row="1" Margin="0 10">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type vms:MainMenuViewModel}">
                    <views:MainMenuView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:ManagerViewModel}">
                    <views:ManagerView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:AddClientViewModel}">
                    <views:AddClientView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:ConsultantViewModel}">
                    <views:ConsultantView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:BankWorkerViewModel}">
                    <views:BankWorkerView/>
                </DataTemplate>
            </Grid.Resources>

            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Grid>
    </Grid>
</Window>
